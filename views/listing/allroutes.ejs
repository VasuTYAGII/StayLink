<% layout('/layouts/boilerplate') %>
<!-- <h2 class="mt-3 mb-5 common-heading">All Listings</h2>     -->
 <body>
<hr>
<div class="filters mb-3 ">
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-fire"></i></div>
    <div class="filter-title">Trending</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-bed"></i></div>
    <div class="filter-title">Rooms</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-umbrella-beach"></i></div>
    <div class="filter-title">Beachfront</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-city"></i></div>
    <div class="filter-title">Mansions</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-mountain-city"></i></div>
    <div class="filter-title">Top Cities</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-tent"></i></div>
    <div class="filter-title">Camping</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-ship"></i></div>
    <div class="filter-title">House Boats</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-warehouse"></i></div>
    <div class="filter-title">Farms</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-snowflake"></i></div>
    <div class="filter-title">Arctic</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-igloo"></i></div>
    <div class="filter-title">Islands</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-solid fa-caravan"></i></div>
    <div class="filter-title">Caravan</div>
  </div>
  <div class="filter">
    <div class="filter-icon"><i class="fa-brands fa-fort-awesome"></i></div>
    <div class="filter-title">Castles</div>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault"><b>Total after Taxes</b></label>
    </div>
  </div>
</div>
<hr>


        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings)
        { %>
            <a class="showcard" href="/listings/<%= listing._id %>" >  
                <div class="card listingcard" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_Image" height="250">
                <div class="card-body">
                  <p class="content"> <b><%= listing.title%></b>
                  <br>
                  &#8377;<%= listing.price.toLocaleString("en-IN") %> /night 
                  <i class="tax-info">&nbsp; &nbsp; +18% GST</i></p>                  
                </div>
              </div></a>
           
        <% } %> 
        </div>
</body>

<script>
  let taxButton=document.getElementById("flexSwitchCheckDefault");
  taxButton.addEventListener("click" , ()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo)
  {
    if(info.style.display=="inline")
  {
     info.style.display="none";
  }
  else
  {
    info.style.display="inline";
  }
  }
  })
</script>